<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPlantDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnBack2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_back"
            android:src="@drawable/custom_icon_back" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#0093A368"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            app:srcCompat="@mipmap/ic_launcher_icon_foreground" />

        <LinearLayout
            android:id="@+id/sciNameRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sciNameField2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/epilogue"
                android:text="Scientific Name"
                android:textSize="10dp"
                android:visibility="visible" />

            <!--<TextView
                android:id="@+id/contribField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/epilogue"
                android:text="Contributor"
                android:textSize="10dp"
                android:visibility="visible"

                />

            <TextView
                android:id="@+id/contributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/epilogue_bold"
                android:text="User"
                android:textSize="15dp"
                android:visibility="visible" />-->

        </LinearLayout>


        <TextView
            android:id="@+id/sciName2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/epilogue_bold"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/epilogue"
            android:text="Local Name"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/etLocalName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/epilogue_bold"
            android:hint="None"
            android:inputType="text"
            android:minWidth="350dp"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/epilogue"
            android:text="Medicinal Use"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/etMedicinalUse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/epilogue_bold"
            android:gravity="top|left"
            android:hint="None"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="8"
            android:minWidth="350dp"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/epilogue"
            android:text="Benefits"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/etBenefits2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/epilogue_bold"
            android:gravity="top|left"
            android:hint="None"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="8"
            android:minWidth="350dp"
            android:padding="10dp"
            android:textSize="20sp" />


    </LinearLayout>
</ScrollView>