<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/transparent"
    android:padding="10dp">


    <ImageView
        android:id="@+id/animateIV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/animation_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/epilogue"
        android:text="Loading. Please wait."
        app:layout_constraintEnd_toEndOf="@+id/animateIV"
        app:layout_constraintStart_toStartOf="@+id/animateIV"
        app:layout_constraintTop_toBottomOf="@+id/animateIV" />


</androidx.constraintlayout.widget.ConstraintLayout>